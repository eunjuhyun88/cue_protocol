async function authenticateSession(req: Request, res: Response, next: NextFunction) {
  try {
    const authHeader = req.headers.authorization;
    const sessionToken = authHeader?.replace('Bearer ', '');
    
    if (!sessionToken) {
      console.log('âŒ Authorization í—¤ë” ì—†ìŒ');
      return res.status(401).json({
        success: false,
        error: 'Authentication required',
        message: 'Authorization í—¤ë”ê°€ í•„ìš”í•©ë‹ˆë‹¤'
      });
    }
    
    console.log('ğŸ” í† í° ê²€ì¦ ì‹œë„:', sessionToken.substring(0, 20) + '...');
    
    const user = await sessionManager.getUserBySession(sessionToken);
    
    if (!user) {
      console.log('âŒ ìœ íš¨í•˜ì§€ ì•Šì€ ì„¸ì…˜ í† í°');
      return res.status(401).json({
        success: false,
        error: 'Invalid or expired session',
        message: 'ìœ íš¨í•˜ì§€ ì•Šê±°ë‚˜ ë§Œë£Œëœ ì„¸ì…˜ì…ë‹ˆë‹¤'
      });
    }
    
    console.log('âœ… ì¸ì¦ ì„±ê³µ:', user.username || user.id);
    req.user = user;
    next();
  } catch (error) {
    console.error('ğŸ’¥ ì¸ì¦ ë¯¸ë“¤ì›¨ì–´ ì˜¤ë¥˜:', error);
    res.status(500).json({
      success: false,
      error: 'Authentication failed',
      message: error.message
    });
  }
}

